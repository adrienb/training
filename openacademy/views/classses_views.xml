<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="classes_tree_view" model="ir.ui.view">
            <field name="name">openacademy.class.tree</field>
            <field name="model">openacademy.class</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="difficulty"/>
                </tree>
            </field>
        </record>

        <record id="course_form_view" model="ir.ui.view">
            <field name="name">openacademy.class.form</field>
            <field name="model">openacademy.class</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- <button class="oe_stat_button" 
                                type="object"
                                name="attendees_count" 
                                icon="fa-users">
                                <div class="o_stat_info">
                                    <field name="total_attendees" class="o_stat_value"/>
                                    <span class="o_stat_text" >
                                        Attendees 
                                    </span>
                                </div>
                            </button> -->
                            <button class="oe_stat_button" 
                                type="action"
                                name="%(action_view_attendees)d" 
                                icon="fa-users">
                                <div class="o_stat_info">
                                    <field name="total_attendees" class="o_stat_value"/>
                                    <span class="o_stat_text" >
                                        Attendees 
                                    </span>
                                </div>
                            </button>                            
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="responsible_id"/>
                            <field name="difficulty"/>
                            <field name="total_attendees"/>
                        </group>
                        <notebook>
                            <page string="Sessions" name="sessions">
                                <field name="sessions_ids"/>
                                 
                              
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="classes_action" model="ir.actions.act_window">
            <field name="name">Classes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openacademy.class</field>
            <field name="view_mode">tree,form</field>
        </record>

        <act_window id="action_view_attendees" 
            name="Open attendees"
            res_model="res.partner"
            view_mode="tree,form"
            domain="[('session_ids.course_id', 'in', active_ids)]" />

</odoo>