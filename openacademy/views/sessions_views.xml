<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="sessions_tree_view" model="ir.ui.view">
            <field name="name">openacademy.session.tree</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="session_date"/>
                </tree>
            </field>
        </record> 

        <record id="sessions_form_view" model="ir.ui.view">
            <field name="name">openacademy.session.form</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <button name="create_invoice" type="object"
                            string="Create invoice" attrs="{'invisible' : [('is_paid', '=', True)]}"                             
                        />
                        <button name="subscribe" type="object"
                            string="Subscribe" attrs="{'invisible' : [('is_student', '=', False)]}"                             
                        />
                        <group>
                            <group>
                                <field name="is_student" invisible="1"/>
                                <field name="name" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="session_date" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="course_id" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="can_edit_instructor" invisible="1"/>
                                <field name="instructor_id" attrs="{'readonly': ['|', ('can_edit_instructor', '=', True), ('is_student', '=', True)]}"/>
                                <field name="active" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="max_student" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="taken_seats" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="five_seats" attrs="{'readonly': [('is_student', '=', True)]}"/>                             
                            </group>
                            <group>                 
                                <field name="currency_id" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="price" attrs="{'readonly': [('is_student', '=', True)]}"/>  
                                <field name="product_id" attrs="{'readonly': [('is_student', '=', True)]}"/>
                                <field name="is_paid" attrs="{'readonly': [('is_student', '=', True)]}"/>
                            </group>                        
                        </group>
                        <notebook>
                            <page string="attendees" name="attendees">
                                <field name="attendee_ids"/>                                                             
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sessions_action" model="ir.actions.act_window">
            <field name="name">Sessions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_mode">tree,form</field>
        </record>


</odoo>